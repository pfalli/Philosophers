{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "/mnt/c/Users/piero/Desktop/philo", // Path to your executable
            "args": ["5", "400", "200", "200"], // Arguments to pass to your program
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build", // Task to build your project before debugging
            "miDebuggerPath": "C:/usr/bin/gdb", // Path to gdb
            "logging": {
                "trace": true,
                "traceResponse": true,
                "engineLogging": true
            },
            "miDebuggerArgs": "",
            "stopAtConnect": false,
            "sourceFileMap": {
                "/build/glibc-2.27": "${workspaceFolder}"
            }
        }
    ]
}